<div class="container">
  <div class="col-md-1"></div>
  <div id="table-responsive" class="col-md-10">
    <h3>Listing classrooms</h3>
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Student</th>
        <th>Course</th>
        <th>Entry at</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @classrooms.each do |classroom| %>
          <tr>
            <td><%= classroom.student.name %></td>
            <td><%= classroom.course.name %></td>
            <td><%= classroom.entry_at.strftime('%A, %d %B %Y %H:%M:%S') %></td>
            <td><%= link_to 'Show', classroom %></td>
            <td><%= link_to 'Destroy', classroom, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'New', new_classroom_path, class: "btn btn-info col-md-12 pull-right" %>
  </div>
  <div class="col-md-1"></div>
  <br/>
</div>
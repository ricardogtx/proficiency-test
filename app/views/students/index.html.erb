<p id="notice"><%= notice %></p>
<div class="row">
    <div class="box">
        <div class="col-lg-12">
          <div class="container">
            <div class="col-md-1"></div>
            <div id="table-responsive" class="col-md-10">
              <h1>Lista de Estudantes</h1>

              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Número de Registro</th>
                    <th>Status</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @students.each do |student| %>
                    <tr>
                      <td><%= student.name %></td>
                      <td><%= student.register_number %></td>
                      <td><%= student.status %></td>
                      <td><%= link_to 'Mostrar', student %></td>
                      <td><%= link_to 'Editar', edit_student_path(student) %></td>
                      <td><%= link_to 'Excluir', student, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                    </tr>
                  <% end %>

                </tbody>
              </table>

              <br>

              <%= link_to 'Novo Estudante', new_student_path,class: "btn btn-success" %>
          </div>
      </div>
    </div>
  </div>
</div>

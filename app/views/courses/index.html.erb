<p id="notice"><%= notice %></p>
<div class="row">
    <div class="box">
        <div class="col-lg-12">
          <div class="container">
            <div class="col-md-1"></div>
            <div id="table-responsive" class="col-md-10">
              <h1>Lista de Cursos</h1>

              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Status</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @courses.each do |course| %>
                    <tr>
                      <td><%= course.name %></td>
                      <td><%= course.description %></td>
                      <td><%= course.status %></td>
                      <td><%= link_to 'Mostrar', course %></td>
                      <td><%= link_to 'Editar', edit_course_path(course) %></td>
                      <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

              <%= link_to 'Novo Curso', new_course_path,class: "btn btn-success" %>
          </div>
      </div>
    </div>
  </div>
</div>
